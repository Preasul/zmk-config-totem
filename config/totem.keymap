            label = "IntoStenography";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <40>;
            bindings
                = <&to TVP2>
                , <&macro_tap &kp F6>
                ;
        };
