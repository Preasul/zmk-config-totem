        pass: pass {
            label = "password";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <40>;
            bindings
                = <&macro_tap &kp LEFT &kp RIGHT &kp LEFT &kp RIGHT &kp LEFT &kp RIGHT &kp LEFT &kp RIGHT>
                , <&kp EXCL>
                , <&macro_press &kp LSHFT>
                , <&macro_tap &kp R> 
