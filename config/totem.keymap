            label = "removelast";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <40>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp BSPC> 
                , <&macro_release &kp LCTRL>
                ;
