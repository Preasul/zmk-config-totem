            compatible = "zmk,combos";
            combo_esc {
                timeout-ms = <50>;
                key-positions = <0 4>;
                bindings = <&to BASE>;
            };
            combo_tvp {
                timeout-ms = <100>;
                key-positions = <35 36 37>;
                bindings = <&tog TVP1>;
            };
            combo_pass {
                timeout-ms = <100>;
                key-positions = <32 33 34>;
                bindings = <&pass>;
            };
            combo_f1 {
                timeout-ms = <70>;
                key-positions = <1 3>;
                bindings = <&kp F1>;
            };
            combo_jumpdown {
                timeout-ms = <70>;
                key-positions = <3 4>;
                bindings = <&kp F3>;
            };
            combo_f2 {
                timeout-ms = <100>;
                key-positions = <0 1 2>;
                bindings = <&kp F2>;
            };
    };

